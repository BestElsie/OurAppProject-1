<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/feedback_top"></include>

    <TextView android:id="@+id/fb_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="如果您在使用过程中遇到问题可以发送邮件至下面的邮箱告知我们，我们会尽快解决的，感谢您的反馈～"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fb_str"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="#6ea0f8"
        android:text="邮箱地址：fanfou@gmail.com"/>
</RelativeLayout>
